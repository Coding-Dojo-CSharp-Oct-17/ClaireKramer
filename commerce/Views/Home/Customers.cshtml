@{
    ViewData["Title"] = "Customers";
}

@model commerce.Models.Customer

<header>
    <div class="container">
        <a href="/">Dashboard</a> | <a href="/Products">Products</a> | <a href="/Orders">Orders</a></li> | <a href="/Customers">Customers</a>
    </div>
</header>

<h3>Add a new customer</h3>
<form asp-action="NewCustomer" asp-controller="Home" method="Post">
    <span asp-validation-for="CustomerName"></span>
    <label asp-for="CustomerName"></label><input asp-for="CustomerName">
    <input type="submit" value="Add">
</form>

<table>
    <thead>
        <th>Customer Name</th>
        <th>Created At</th>
        <th>Actions</th>
    </thead>
    <tbody>
        @{
            foreach(var customer in @ViewBag.AllCustomers) {
                <tr>
                    <td>@customer.CustomerName</td>
                    <td>@customer.CreatedAt.ToString("MMM dd, yyyy")</td>
                    <td><a href="Remove/@customer.CustomerId">Remove</a></td>
                </tr>
            }
        }
    </tbody>
</table>