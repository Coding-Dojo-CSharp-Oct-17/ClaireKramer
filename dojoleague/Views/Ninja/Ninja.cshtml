@{
    ViewData["Title"] = "Dojo League - @ViewBag.Ninja.Name";
}

<h2>Name: @ViewBag.Ninja.Name</h2>
<p>Ninja Level - @ViewBag.Ninja.Level</p>
<p>Description: @ViewBag.Ninja.Description</p>
    @{
        @if(@ViewBag.Ninja.dojo.Id == 1) {
            <p>Currently Rogue</p>
        }
        else {
            <p>Current Dojo: <a href="/Dojos/@ViewBag.Ninja.dojo.Id">@ViewBag.Ninja.dojo.Name</a></p>
        }
    }


<a href="/Ninjas">Back to Ninjas</a>